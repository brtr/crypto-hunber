<div class="container py-4 mb-2 mb-sm-0 pb-sm-5">
  <div class="row justify-content-center">
    <div class="col-lg-9">
      <% @projects.each do |project| %>
        <article class="card card-horizontal card-hover mb-grid-gutter">
          <%= image_tag get_logo(project.logo_url), class: "card-img-top" %>
          <div class="card-body">
            <h2 class="h3 nav-heading mb-4">
              <%= link_to project.name, recommend_project_path(project) %>
            </h2>
            <a class="d-flex meta-link fs-sm align-items-center pt-3" href="#">
              <div class="ps-2 mt-n1">
                by<span class="fw-semibold ms-1"><%= project.user.address %></span>
              </div>
            </a>
            <div class="mt-3 text-end text-nowrap">
              <a class="meta-link fs-xs" href="#">
                <i class="ai-message-square me-1"></i>&nbsp;<%= project.comments.size %>
              </a>
              <span class="meta-divider"></span>
              <a class="meta-link fs-xs" href="#">
                <i class="ai-calendar me-1 mt-n1"></i>&nbsp;<%= date_format project.created_at %>
              </a>
            </div>
            <% if current_user %>
            <span class="likeBtn text-<%= check_project_liked(project.user_like_projects.pluck(:user_id)) ? "danger" : "secondary" %>" data-id="<%= project.id %>">
              <i class="ai-thumbs-up fs-lg opacity-60 mb-1"></i>
            </span>
            <% else %>
              <i class="ai-thumbs-up fs-lg opacity-60 mb-1"></i>
            <% end %>
            <span class="likesCount me-5"><%= project.likes_count %></span>
            <%= link_to project.website, target: "_blank" do %>
              <i class="ai-log-out fs-lg opacity-60"></i>
            <% end %>
            <div class="tags">
              <%= raw get_tags(project.tags) %>
            </div>
          </div>
        </article>
      <% end %>
    </div>
    <div class="paginationBox p-4">
      <%= paginate @projects %>
    </div>
  </div>
</div>