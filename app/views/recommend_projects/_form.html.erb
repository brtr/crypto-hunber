<%= form_for @project do |f| %>
  <div class="form-group mt-3">
    <%= f.label :name, "项目名称*", class: "col-2 col-form-label" %>
    <div class="col-6">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group mt-3">
    <%= f.label :website, "项目地址*", class: "col-2 col-form-label" %>
    <div class="col-6">
      <%= f.text_field :website, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group mt-3">
    <%= f.label :reason, "推荐理由*", class: "col-2 col-form-label" %>
    <div class="col-6">
      <%= f.text_field :reason, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group mt-3">
    <%= f.label :tag_list, "标签*", class: "col-2 col-form-label" %>
    <div class="col-6">
      <%= f.text_field :tag_list, value: f.object.tag_list.to_s, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group mt-3">
    <%= f.label :desc, "项目描述*", class: "col-2 col-form-label" %>
    <div class="col-6">
      <%= f.rich_text_area :desc, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group mt-3 col-4">
    <%= f.submit "提交", class: 'btn btn-primary' %>
    <%= link_to '取消', recommend_projects_path, class: 'btn btn-default' %>
  </div>
<% end %>