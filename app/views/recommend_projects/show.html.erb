<div class="py-4 py-lg-8 pb-14 bg-white" id="project-show">
  <div class="container">
    <div class="justify-content-center row">
      <div class="mb-2 col-xl-8 col-lg-8 col-md-12 col-sm-12">
        <div class="text-center mb-4 position-relative">
          <h1 class="display-3 fw-bold mb-4"><%= @project.name %></h1>
          <div class="tags">
            <%= raw get_tags(@project.tags) %>
          </div>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-5">
          <div class="d-flex align-items-center">
            <div class="ms-2 lh-1">
              <h5 class="mb-1">推荐人: <%= @project.user.address %></h5>
              <h5 class="mt-3">推荐理由:</h5>
              <p><%= @project.reason %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="justify-content-center row">
      <div class="mb-2 col-xl-8 col-lg-8 col-md-12 col-sm-12">
        <div class="d-flex justify-content-between align-items-center mb-5">
          <div class="d-flex align-items-center">
            <div class="ms-2 lh-1">
              <h5>项目介绍:</h5>
              <%= @project.desc %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="justify-content-center row">
      <div class="mb-2 col-xl-8 col-lg-8 col-md-12 col-sm-12">
        <h3>Comments</h3>
        <div class="card shadow-0 border" style="background-color: #f0f2f5;">
          <div class="card-body p-4">
            <div class="form-outline mb-4">
              <%= form_for @comment do |f| %>
                <div class="form-group mt-3">
                  <%= f.rich_text_area :content, class: "form-control", placeholder: "Add comment" %>
                  <%= f.hidden_field :recommend_project_id, value: @project.id %>
                  <%= f.hidden_field :user_id, value: current_user.id %>
                </div>
                <div class="form-group mt-3">
                  <%= f.submit "提交", class: 'btn btn-primary' %>
                </div>
              <% end %>
            </div>
            <% @comments.each do |comment| %>
              <div class="card mb-4">
                <div class="card-body">
                  <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                      <%= image_tag "user.png", size: "25x25" %>
                      <p class="mb-0 ms-2">
                        <%= truncate(comment.user.address, length: 10) %> - <small><%= time_ago_in_words comment.created_at %> ago</small>
                      </p>
                    </div>
                  </div>
                  <p><%= comment.content %></p>
                </div>
              </div>
            <% end %>
            <div class="paginationBox p-4">
              <%= paginate @comments %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>