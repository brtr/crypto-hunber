<div class="container py-4 mb-2 mb-sm-0 pb-sm-5" id="userProfile">
  <div class="row justify-content-center">
    <div class="col-lg-9">
      <div class="d-flex flex-column h-100 bg-light rounded-3 shadow-lg p-4">
        <div class="py-2 p-md-3">
          <div class="d-sm-flex align-items-center justify-content-between pb-4 text-center text-sm-start">
            <h1 class="h3 mb-2 text-nowrap"><%= t("views.label.account") %></h1>
          </div>
          <hr class="mt-2 mb-4">
          <div class="row">
            <div class="col-sm-12 hide" id="ensBlock">
              <div class="mb-3 pb-1">
                <h6 class="mt-3">ENS Domain:</h6>
                <h6 class="nav-heading mb-1"><span id="ens"></span></h6>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="mb-3 pb-1">
                <h6 class="mt-3"><%= t("views.label.address") %>:</h6>
                <h6 class="nav-heading mb-1"><%= current_user.address %></h6>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="mb-3 pb-1">
                <h6 class="mt-3"><%= t("views.label.total_points") %>:</h6>
                <h6 class="nav-heading mb-1"><%= current_user.point.total_points %></h6>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="mb-3 pb-1">
                <h6 class="mt-3"><%= t("views.label.usable_points") %>:</h6>
                <h6 class="nav-heading mb-1"><%= current_user.point.usable_points %></h6>
              </div>
            </div>
            <div class="col-12">
              <hr class="mt-2 mb-4">
              <h6 class="mt-3"><%= t("views.title.projects_list") %>:</h6>
              <% @projects.each do |project| %>
                <article class="card card-horizontal card-hover mb-grid-gutter rounded-3">
                  <%= link_to '', recommend_project_path(project), class: "card-img-top", style: "background-image: url(#{get_logo(project.logo_url)});"%>
                  <div class="card-body">
                    <h2 class="h3 nav-heading mb-4">
                      <%= link_to project.name, recommend_project_path(project) %>
                    </h2>
                    <a class="d-flex meta-link fs-sm align-items-center pt-3" href="#">
                      <div class="ps-2 mt-n1">
                        by<span class="fw-semibold ms-1"><%= project.user.address %></span>
                      </div>
                    </a>
                    <div class="mt-3 text-nowrap">
                      <i class="ai-thumbs-up fs-lg opacity-60 mb-1"></i>
                      <span class="likesCount me-3"><%= project.likes_count %></span>
                      <%= link_to project.website, target: "_blank" do %>
                        <i class="ai-compass fs-lg opacity-60"></i>
                      <% end %>
                      <div class="float-end">
                        <a class="meta-link fs-xs" href="#">
                          <i class="ai-message-square me-1"></i>&nbsp;<%= project.comments.size %>
                        </a>
                        <span class="meta-divider"></span>
                        <a class="meta-link fs-xs" href="#">
                          <i class="ai-calendar me-1 mt-n1"></i>&nbsp;<%= date_format project.created_at %>
                        </a>
                      </div>
                    </div>
                    <div class="p-bottom">
                      <%= raw get_tags(project.tags) %>
                    </div>
                  </div>
                </article>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>